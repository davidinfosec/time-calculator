{
    "manifest_version": 2,
    "name": "Time Calculator",
    "version": "1.0",
    "description": "Perform simple time calculations.",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icons/clock-icon-48.png"
        }
    },
    "icons": {
        "48": "icons/clock-icon-48.png"
    }
}
